@model IEnumerable<BookStore.Domain.Entities.Book>

@{
    ViewBag.Title = "Index : All Books";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Book Index</h2>
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>All Books</h3>
    </div>
    <div class="panel-body">

        <table class="table table-condensed table-striped table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.ISBN)
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Specialization)
                </th>
                
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.ISBN)
                    </td>
                    <td class="">
                        @Html.ActionLink(item.Title, "Edit", new { item.ISBN })
                        
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td class="text-right">
                        @*@Html.DisplayFor(modelItem => item.Price)*@
                        @item.Price.ToString("c")
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Specialization)
                    </td>
                    <td class="text-center">
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.ISBN }) |
                        @Html.ActionLink("Details", "Details", new { id = item.ISBN }) |*@
                        @Html.ActionLink("Delete", "Delete", new {item.ISBN }, new  { @class="btn btn-danger btn-xs"})
                    </td>
                </tr>
            }

        </table>

    </div>
    <div class="panel-footer">
        @Html.ActionLink("Add New Book", "Create", null, new {@class="btn btn-default" })
    </div>
</div>

